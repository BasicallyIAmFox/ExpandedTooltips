{
	"schemaVersion": 1,
	"id": "expanded_tooltips",
	"version": "${version}",
	"name": "Expanded Tooltips",
	"description": "What if tooltips included descriptions hinting at the use of blocks/items, sometimes even with a bit of lore?",
	"authors": [
		"BasicallyIAmFox",
		"Rolly"
	],
	"license": "MIT",
	"icon": "assets/expanded_tooltips/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "foxhub.expandedtooltips.ExpandedTooltips",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "foxhub.expandedtooltips.ExpandedTooltipsClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"expanded_tooltips.mixins.json",
		{
			"config": "expanded_tooltips.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.14.19",
		"minecraft": "~1.19.4",
		"java": ">=17",
		"fabric-api": "*",
		"fabric-language-kotlin": ">=1.8.21"
	},
	"suggests": {
		"another-mod": "*"
	}
}